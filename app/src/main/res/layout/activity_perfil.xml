<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:textAlignment="viewStart"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtInformacion"
            android:layout_width="291dp"
            android:layout_height="31dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="98dp"
            android:text="PERFIL"
            android:textAlignment="center"
            android:textColor="#FFC107"
            android:textDirection="locale"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="31dp" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="160dp"
            android:layout_height="164dp"
            app:srcCompat="@drawable/profile" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="33dp" />

        <EditText
            android:id="@+id/edtIdentidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="141dp"
            android:layout_marginEnd="29dp"
            android:layout_marginBottom="7dp"
            android:backgroundTint="#3F51B5"
            android:ems="10"
            android:hint="Identidad"
            android:inputType="textPersonName"
            android:textColor="#041B98"
            android:textColorHint="#041B98" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="29dp" />

        <EditText
            android:id="@+id/edtNombre"
            android:layout_width="241dp"
            android:layout_height="44dp"
            android:backgroundTint="#3F51B5"
            android:ems="10"
            android:hint="Nombre"
            android:inputType="textPersonName"
            android:textColor="#041B98"
            android:textColorHint="#041B98" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="22dp" />

        <EditText
            android:id="@+id/edtUsuario"
            android:layout_width="242dp"
            android:layout_height="44dp"
            android:backgroundTint="#3F51B5"
            android:ems="10"
            android:hint="Usuario"
            android:inputType="textPersonName"
            android:phoneNumber="true"
            android:textColor="#041B98"
            android:textColorHint="#041B98" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="17dp" />

        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:backgroundTint="#3F51B5"
            android:ems="10"
            android:hint="Password"
            android:inputType="textVisiblePassword|text|textEmailAddress"
            android:textColor="#041B98"
            android:textColorHint="#041B98" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="90dp"
            android:background="#3F51B5"
            android:drawableLeft="@drawable/modificar"
            android:drawableTint="#FFFFFF"
            android:text="MODIFIFCAR"
            android:textSize="20sp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>